<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_gravity="bottom|end"
    android:layout_width="match_parent"
    android:layout_height="45mm">

    <ImageButton
        android:id="@+id/botónAdelante"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/botónAlto"
        app:layout_constraintEnd_toStartOf="@+id/botónDerecha"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/botónDerecha"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:rotation="90"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/flecha"
        tools:layout_editor_absoluteY="100dp" />

    <ImageButton
        android:id="@+id/botónAtrás"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:rotation="180"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/botónDerecha"
        app:layout_constraintTop_toBottomOf="@+id/botónAlto"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/botónIzquierda"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:rotation="270"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/botónAlto"
        app:layout_constraintTop_toTopOf="@+id/botónAlto"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/botónAlto"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:scaleType="fitXY"
        app:layout_constraintRight_toLeftOf="@id/botónDerecha"
        app:layout_constraintTop_toTopOf="@id/botónDerecha"
        app:srcCompat="@drawable/frenar" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/acelerar"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/frenar"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="83dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="157dp" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="213dp" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="45"
        app:layout_constraintBottom_toTopOf="@+id/botónDerecha"
        app:layout_constraintStart_toEndOf="@+id/botónAdelante"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-45"
        app:layout_constraintBottom_toTopOf="@+id/botónIzquierda"
        app:layout_constraintEnd_toStartOf="@+id/botónAdelante"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-135"
        app:layout_constraintEnd_toStartOf="@+id/botónAtrás"
        app:layout_constraintTop_toBottomOf="@+id/botónIzquierda"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="135"
        app:layout_constraintStart_toEndOf="@+id/botónAtrás"
        app:layout_constraintTop_toBottomOf="@+id/botónDerecha"
        app:srcCompat="@drawable/flecha" />

</androidx.constraintlayout.widget.ConstraintLayout>