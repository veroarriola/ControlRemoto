<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_gravity="bottom|end"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/botónAdelante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/botónAlto"
        app:layout_constraintEnd_toStartOf="@id/botónDerecha"
        app:layout_constraintStart_toEndOf="@+id/botónIzquierda"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/botónDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/botónAtrás"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/botónAtrás"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/botónSE"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/botónIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="270"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@id/botónAlto"
        app:layout_constraintTop_toTopOf="@id/botónAlto"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/botónAlto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintRight_toLeftOf="@id/botónDerecha"
        app:layout_constraintBottom_toTopOf="@id/botónAtrás"
        app:srcCompat="@drawable/frenar" />

    <ImageButton
        android:id="@+id/botónAcelera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/acelerar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botónFrena" />

    <ImageButton
        android:id="@+id/botónFrena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/frenar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botónRotaIzquierda" />

    <ImageButton
        android:id="@+id/botónRotaIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        app:layout_constraintBottom_toTopOf="@id/botónRotaDerecha"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/botónRotaDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/botónNE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="45"
        app:layout_constraintBottom_toTopOf="@id/botónDerecha"
        app:layout_constraintStart_toEndOf="@id/botónAdelante"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/botónNO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-45"
        app:layout_constraintBottom_toTopOf="@id/botónIzquierda"
        app:layout_constraintEnd_toStartOf="@id/botónAdelante"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/botónSO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-135"
        app:layout_constraintEnd_toStartOf="@id/botónAtrás"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/flecha" />

    <ImageButton
        android:id="@+id/botónSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="135"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/flecha" />

</androidx.constraintlayout.widget.ConstraintLayout>